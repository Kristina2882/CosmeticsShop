@{
    Layout = "_Layout";
}

<h4>All the categories</h4>

@if (Model.Count == 0)
{
    <h6>There are no categories now</h6>
}

@foreach (Category category in Model)
{
    <h5>@category.Name| @Html.ActionLink("Edit", "Edit", new {id = category.CategoryId}) | @Html.ActionLink("Delete", "Delete", new {id = category.CategoryId}) </h5>
    <h6>@Html.ActionLink("Details", "Details", new {id = category.CategoryId})</h6>
}

<h6>@Html.ActionLink("Add new category", "Create")</h6>
<h6>@Html.ActionLink("Home", "Index", "Home")</h6>