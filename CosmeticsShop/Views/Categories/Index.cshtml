@{
    Layout = "_Layout";
}
@model IEnumerable<CosmeticsShop.Models.Category>

<h4 class="mb-3 mt-3">All the categories</h4>


@if (Model.Count() == 0)
{
    <h6 class="mb-3 mt-3">There are no categories now</h6>
}


<div class="row mt-3 mb-3">
@foreach (Category category in Model)
{
    <div class="mt-3 col-md-2">
        <img class ="img-thumbnail" src="@category.Image">
        <h5 class="mb-3">@Html.ActionLink($"{category.Name}", "Details", new {id = category.CategoryId })</h5>
        <h6 class="mb-3"> @Html.ActionLink("Edit", "Edit", new { id = category.CategoryId }) </h6>
        <h6 class="mb-3"> @Html.ActionLink("Delete", "Delete", new { id = category.CategoryId }) </h6>
    </div>
}
</div>

<h6 class="mt-3">@Html.ActionLink("Add new category", "Create")</h6>
