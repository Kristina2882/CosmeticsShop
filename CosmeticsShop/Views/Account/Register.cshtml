@{
    Layout = "_Layout";
}

@using CosmeticsShop.ViewModels
@model RegisterViewModel

<div class="mt-3 mb-3 text-center">
@if (!ViewData.ModelState.IsValid)
    {
        @Html.ValidationSummary("Prease fix the following error(s) and resubmit a form")

    }
</div>


   <h4 class="text-center mb-3 mt-3">Registration</h4>
   <div class="text-center">
   <form method = "post" asp-controller="Account" asp-action="Register">
    <div asp-validation-summary="ModelOnly"></div>
    <div class="mb-3">
        <input asp-for="Email" placeholder="Your email" /> <br/>
    </div>
    <div class="mb-3">
        <input asp-for="Password" placeholder="Your password" /> <br/>
    </div>
        <div class="mb-3">
            <input asp-for="ConfirmPassword" placeholder="Confirm your password" /> <br/>
        </div>

    <div class="mt-3">
        <input type = "submit" class="buttonsmall" value="Register" />
    </div>
</form>
</div>



