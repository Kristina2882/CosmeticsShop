@using Microsoft.AspNetCore.Identity;
@{
    Layout = "_Layout";
}

@model CosmeticsShop.ViewModels.ChangeRoleViewModel
 
<h4 class="mb-3 mt-3">Access permissions for @Model.UserEmail</h4>
 
<form asp-action="Edit" method="post">
    <input type="hidden" name="userId" value="@Model.UserId" />
    <div class="form-group">
        @foreach (IdentityRole role in Model.AllRoles)
        {
            <div class="mb-1">
            <input type="checkbox" name="roles" value="@role.Name"
                   @(Model.UserRoles.Contains(role.Name) ? "checked=\"checked\"" : "") /> @role.Name 
                   </div>
        }
    </div>
    <div class="mb-3 mt-3">
    <button type="submit" class="buttonsmall">Save</button>
    </div>
</form>