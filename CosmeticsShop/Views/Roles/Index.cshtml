@{
    Layout = "_Layout";
}

@using CosmeticsShop.Models
@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityRole>

@if (Model.Count() == 0)
{
    <h5 class="mb-3 mt-3">Now there are no roles in this app.</h5>
}

@foreach (var role in Model)
{
    <div class="mb-3 mt-3">
     <h5>@role.Name</h5>
     <form asp-action="Delete" asp-route-id="@role.Id" method="post">

                <button type="submit" class="btn btn-danger">Delete</button>
    </form>
    </div>
}


<h6 class="mt-3 mb-3">@Html.ActionLink("Add new role", "Create")</h6>
<h6 class="mt-3">@Html.ActionLink("See all users", "UserList")</h6>