@{
    Layout = "_Layout";
}

@model CosmeticsShop.Models.Order

<h4 class="text-center mb-3 mt-3">Order Processing</h4>

<div class="text-center mb-3 mt-3">
    
    @if (User.Identity.IsAuthenticated)
    {
        <form asp-action="CheckOut" method="post" class="form-horizontal">
            <div class="form-group">
                <div class="mb-3">
                    <input asp-for="Name" placeholder="Your name" /> <br/>
                    <span asp-validation-for="Name"></span>
                </div>
                <div class="mb-3">
                    <input asp-for="SurName" placeholder="Your surname" /><br/>
                    <span asp-validation-for="SurName"></span>
                </div>
                <div class="mb-3">
                    <input asp-for="Address" readonly value="@User.Identity.Name" /><br/>
                    <span asp-validation-for="Address"></span>
                </div>
                <div class="mb-3">
                    <input asp-for="Phone" placeholder="Your phone" /><br/>
                    <span asp-validation-for="Phone"></span>
                </div>
 
            <input class="buttonsmall" type="submit" value="Create Order"/>

        </div>
    </form>

    }
    else
    {
        
        <div class="mt-3 mb-3 text-center">
            <h5 class="mb-3">Please login or register before your order is processed!</h5>
        <a class="buttonsmall" asp-controller="Account" asp-action="Register">Register</a>
        <a class="buttonsmall" asp-controller="Account" asp-action="Login">Log in</a>
        </div>
    }

</div>

<div class="mt-3">
    <a class="btn btn-outline-secondary" style="border-radius:10px" asp-controller="Home" asp-action="Index">Home</a>
</div>



