
@{
    Layout = "_Layout";
    }


@model CosmeticsShop.Models.Cosmetic
<h4 class="mb-3 mb-3">Add a new item</h4>


@using (Html.BeginForm())
{
    <div class="mb-3">
    @Html.LabelFor(model=>model.Name)
    @Html.TextBoxFor(model=> model.Name)
    </div>
    <div class="mb-3">
    @Html.LabelFor(model=>model.Price)
    @Html.TextBoxFor(model=> model.Price)
    </div>
    <div class="mb-3">
    @Html.LabelFor(model=>model.Description)
    @Html.TextBoxFor(model=> model.Description)
    </div>
    <div class="mb-3">
        @Html.LabelFor(model=>model.Image)
        @Html.TextBoxFor(model=> model.Image)
        </div>
    <div class="mb-3">
        @Html.LabelFor(model => model.Category)
        @Html.DropDownList("CategoryId")
    </div>
    <div class=" mt-3 mb-3">
    <input type="submit" class="buttonsmall" value="Add Cosmetic"/>
    </div>
}

<h6>@Html.ActionLink("See all cosmetics", "Index")</h6>